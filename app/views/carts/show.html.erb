<div class="shopping-cart">
  <%= render "shopping_cart" %>
</div>

<%if current_order.subtotal == 0  %>
<div class = "row">
  <div class = "col-sm">
    <h4 class="text-right"> Subtotal: <span style="color: purple"><%= number_to_currency current_order.subtotal %></span></h4>
  </div>
  <div class="col-sm">
    <%= link_to '<button type="button" class="btn btn-success pull-right" disabled>Proceed to Checkout</button>'.html_safe, order_new_path%>
  </div>
</div>
<%else %>
<div class = "shopping-cart-total">
  <%= render "total" %>
</div>
<%end %>



